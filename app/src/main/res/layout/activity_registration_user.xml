<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".Registration_admin"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <TextView
        android:id="@+id/title1"
        android:layout_width="324dp"
        android:layout_height="37dp"
        android:freezesText="false"
        android:text="Registration form for user"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/title1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintEnd_toEndOf="parent"

        android:textSize="18sp"
        android:textColor="#0A0A0A"
        android:textAllCaps="false"

        android:text="Create New Account"
        android:id="@+id/subtitle1"
        android:layout_marginTop="52dp"/>

    <EditText
        android:id="@+id/register_username_user"
        android:layout_width="390dp"
        android:layout_height="62dp"
        android:layout_margin="20dp"
        android:layout_marginStart="16dp"

        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:hint="Full name"
        android:inputType="text"
        android:textColor="@android:color/holo_blue_light"
        android:textColorHint="@android:color/holo_blue_light"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle1"></EditText>

    <EditText
        android:layout_height="62dp"
        android:layout_width="390dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_light"
        android:id="@+id/register_phone_number_user"
        app:layout_constraintTop_toBottomOf="@+id/register_username_user"
        android:textColorHint="@android:color/holo_blue_light"
        android:layout_marginLeft="20dp"
        android:inputType="number"
        android:hint="Phone number"
        android:layout_below="@+id/register_username_admin"> </EditText>

    <EditText
        android:id="@+id/register_email_user"
        android:layout_width="390dp"
        android:layout_height="68dp"
        android:layout_alignParentTop="true"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="236dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/holo_blue_light"
        android:textColorHint="@android:color/holo_blue_light"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_phone_number_user"></EditText>

    <EditText
        android:layout_height="64dp"
        android:layout_width="388dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_light"
        android:id="@+id/register_password_user"
        app:layout_constraintTop_toBottomOf="@+id/register_email_user"
        android:textColorHint="@android:color/holo_blue_light"
        android:layout_marginLeft="20dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_alignParentTop="true"> </EditText>

    <EditText
        android:layout_height="69dp"
        android:layout_width="390dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_light"
        android:id="@+id/register_address_user"
        android:textColorHint="@android:color/holo_blue_light"
        android:layout_marginLeft="20dp"
        android:inputType="text"
        android:hint="Address"
        app:layout_constraintBottom_toTopOf="@+id/create_acc_btn1"
        android:layout_marginBottom="12dp"> </EditText>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="178dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp"
        android:textAllCaps="true"
        android:text="Register"
        android:id="@+id/create_acc_btn1"
        android:layout_marginTop="84dp"
        android:textColor="@android:color/white"
        android:background="#40bad5"
        app:layout_constraintTop_toBottomOf="@+id/register_password_user"/>

    <TextView
        android:id="@+id/Login_here1"
        android:layout_width="266dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:text="Already register? Login Here"
        android:textColor="#0A0A0A"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.606"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_acc_btn1" />

    <ProgressBar
        android:layout_height="25dp"
        android:layout_width="62dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/progressBar1"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/Login_here1"
        android:visibility="invisible" style="?android:attr/progressBarStyle"/>

</androidx.constraintlayout.widget.ConstraintLayout>