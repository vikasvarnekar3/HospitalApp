<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".Login_admin"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/title2"
        android:layout_width="392dp"
        android:layout_height="132dp"
        android:freezesText="false"
        android:gravity="center"
        android:text="Hospital Management"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/login_phone_user"
        android:layout_width="367dp"
        android:layout_height="69dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:hint="Phone"
        android:inputType="number"
        android:layout_margin="20dp"

        android:textColor="@android:color/holo_blue_light"
        android:textColorHint="@android:color/holo_blue_light"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title2">

    </EditText>

    <EditText
        android:id="@+id/login_password_user"
        android:layout_width="367dp"
        android:layout_height="66dp"
        android:layout_alignParentTop="true"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_margin="20dp"
        android:textColor="@android:color/holo_blue_light"
        android:textColorHint="@android:color/holo_blue_light"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_phone_user">

    </EditText>

    <Button

        android:layout_height="44dp"
        android:layout_width="148dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAllCaps="true"
        android:text="Login as user"
        android:id="@+id/login_user"
        app:layout_constraintTop_toBottomOf="@+id/login_password_user"
        android:textStyle="bold"
        android:layout_marginTop="48dp"
        android:background="#40bad5"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/Register_here1"
        android:layout_width="293dp"
        android:layout_height="34dp"
        android:layout_marginTop="36dp"
        android:background="@android:color/white"
        android:text="New User? Create Account"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_user" />

    <ProgressBar
        android:layout_height="32dp"
        android:layout_width="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/progressBar2"
        app:layout_constraintTop_toBottomOf="@+id/Register_here1"
        android:layout_marginTop="4dp"
        android:visibility="invisible"
        style="?android:attr/progressBarStyle"/>

</androidx.constraintlayout.widget.ConstraintLayout>