<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".Login_admin"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white">

    <TextView
        android:layout_height="132dp"
        android:layout_width="392dp"
        app:layout_constraintVertical_bias="0.026"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryDark"
        android:textAllCaps="false"
        android:text="Hospital Management"
        android:freezesText="false"
        android:id="@+id/title2"/>

    <EditText
        android:layout_height="69dp"
        android:layout_width="367dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:textColor="#FC3B4A"
        android:id="@+id/login_phone_admin"
        app:layout_constraintTop_toBottomOf="@+id/title2"

        android:textColorHint="@color/colorPrimaryDark"
        android:padding="20dp"
        android:inputType="number"
        android:hint="Phone"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"> </EditText>

    <EditText
        android:layout_height="66dp"
        android:layout_width="367dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.659"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/login_password_admin"
        app:layout_constraintTop_toBottomOf="@+id/login_phone_admin"

        android:textColorHint="@color/colorPrimaryDark"

        android:padding="20dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_alignParentTop="true"> </EditText>

    <Button

        android:layout_height="44dp"
        android:layout_width="148dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAllCaps="true"
        android:text="Login as admin"
        android:id="@+id/login_admin"
        app:layout_constraintTop_toBottomOf="@+id/login_password_admin"
        android:textStyle="bold"
        android:layout_marginTop="48dp"
        android:textColor="@android:color/white"/>

    <TextView

        android:layout_height="39dp"
        android:layout_width="251dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:text="New User? Create Account"
        android:id="@+id/Register_here1"
        app:layout_constraintTop_toBottomOf="@+id/login_admin"
        android:layout_marginTop="36dp"/>

    <ProgressBar
        android:layout_height="32dp"
        android:layout_width="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/progressBar2"
        app:layout_constraintTop_toBottomOf="@+id/Register_here1"
        android:layout_marginTop="4dp"
        android:visibility="invisible"
        style="?android:attr/progressBarStyle"/>

</androidx.constraintlayout.widget.ConstraintLayout>